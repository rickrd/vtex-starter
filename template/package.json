{
  "name": "vtex-starter",
  "author": "@rickrd",
  "license": "ISC",
  "version": "0.0.2",
  "description": "VTEX Store development tools - reverse proxy, compilation, minification, optimization and more!",
  "vtex": {
    "store": "<%= storeName %>",
    "acronym": "<%= storeAcronym %>",
    "environment": "vtexcommercestable",
    "device": "web",
    "protocol": "https"
  },
  "xo": {
    "extends": "xo-avanti",
    "rules": {
      "no-warning-comments": [
        0
      ],
      "unicorn/regex-shorthand": 0
    },
    "globals": [
      "APP",
      "ClassAvanti",
      "AvantiSearch",
      "vtexid",
      "vtexjs"
    ]
  },
  "scripts": {
    "start": "gulp",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "vtex",
    "speed",
    "vtex",
    "speed",
    "gulp",
    "sass"
  ],
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "compass-importer": "^0.4.1",
    "connect-http-please": "^0.3.0",
    "del": "^3.0.0",
    "eslint-config-xo-avanti": "^1.2.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.1",
    "gulp-concat": "^2.6.1",
    "gulp-connect": "^5.5.0",
    "gulp-cssmin": "^0.2.0",
    "gulp-debug": "^4.0.0",
    "gulp-header": "^2.0.5",
    "gulp-hydra": "^1.0.1",
    "gulp-imagemin": "^4.1.0",
    "gulp-load-plugins": "^1.5.0",
    "gulp-open": "^3.0.1",
    "gulp-sass": "^4.0.1",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-spritesmash": "^1.1.1",
    "gulp-strip-comments": "^2.5.2",
    "gulp-uglify": "^3.0.0",
    "gulp-xo": "^0.17.1",
    "gulp.spritesmith": "^6.9.0",
    "husky": "^1.0.0-rc.13",
    "merge-stream": "^1.0.1",
    "proxy-middleware": "^0.15.0",
    "run-sequence": "^2.2.1",
    "serve-static": "^1.13.2",
    "vinyl-buffer": "^1.0.1"
  }
}
